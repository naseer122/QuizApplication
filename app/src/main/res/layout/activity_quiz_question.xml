<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgquesiton"
    android:layout_height="match_parent"
    tools:context=".QuizQuestionActivity">

    <TextView
        android:id="@+id/QuestionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="What is the capital of Pakistan?"
        android:textSize="26sp"
        android:layout_margin="10dp"
        />

    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/QuestionImageIV"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressTint="@color/white"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:maxHeight="10dp"
            android:max="2"/>
        <TextView
            android:id="@+id/QuestionProgressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="3dp"

            tools:text="1/10"/>
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:id="@+id/Option1Tv"
        android:background="@drawable/bg_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Pakistan?"
        android:textSize="26sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:padding="10dp"
        android:id="@+id/Option2Tv"
        android:background="@drawable/bg_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Pakistan?"
        android:textSize="26sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:padding="10dp"
        android:id="@+id/Option3Tv"
        android:background="@drawable/bg_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Pakistan?"
        android:textSize="26sp"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"/>
</LinearLayout>